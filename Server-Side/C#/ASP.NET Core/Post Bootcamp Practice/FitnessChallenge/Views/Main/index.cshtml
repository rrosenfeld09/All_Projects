@model User
<hr style="max-width: 600px;">
<h1 style="font-style: italic; text-align: center;">Sign In. Let's get to work.</h1>

<div style="text-align: center;">
    <p><span style="color: red;" asp-validation-for="username"></span></p> 
    <p><span style="color: red;" asp-validation-for="password"></span></p> 
</div>

<form style="text-align:center;" asp-action="login" asp-controller="main" method="POST">
    <input asp-for="username" type="text" placeholder="username">
    <input asp-for="password" type="password" placeholder="password">
    <input type="submit" value="sign in">
</form>

<img style="width: 850px; border-radius: 7px; margin-top: 10px; display: block; margin-left: auto; margin-right: auto; width: 50%;" src="~/img/fitness.jpg" alt="fitness">


